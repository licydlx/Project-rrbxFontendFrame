<% if(comment && comment.length > 0) {
	var cLength;
	comment.length > 5 ? cLength = 5 : cLength = comment.length;
%>
<section class="user-comments mg-b-15">
	<div class="uc-title">
		<i class="uc-tag"></i>
		<%= "用户评价" %>
	</div>
	<div class="comment-list">
		<% for(var i=0;i < cLength;i++){ %>
			<div class="cl-item">
				<div class="cli-intro">
					<a class="cli-icon">
						<img src=<%= comment[i].avatar %>>
					</a>
					<div class="cli-honor">
						<div class="cli-name"><%= comment[i].uname %></div>
						<div class="cli-score">
							<% if(comment[i]) { %>
								<% for(var j=0;j < comment[i].productScore;j++){ %>
									<a>
										<img src="//img2.renrenbx.com/inco/icon-s.png">
									</a>
								<% } %>
							<% } %>
						</div>
					</div>

					<div class="cli-date">
						<%= comment[i].createTime %>
					</div>
				</div>
				<div class="cli-text">
					<%= comment[i].content %>
				</div>
			</div>
		<% } %>
	</div>

	<% if(comment.length > 5) { %>
		<a class="trigger">
			<img src="https://img2.renrenbx.com/inco/more-up.png">
		</a>
	<% } %>
</section>
<% } %>