<section id="#holder" class="main open mg-b-10">
	<a class="related-person">投保人
		<i class="arrows"></i>
	</a>

	<ul class="input-list">
		<li>
			<a>
				<label>姓&#12288;&#12288;名</label>
				<input id="holder_userName" maxlength="32" minlength="2" placeholder="购买人姓名" data-belong="policyHolderUser" data-type="userName" data-verify="userName"></input>
			</a>
		</li>
		<li norequired="true">
			<a>
				<label>证件类型</label>
				<input style="color:#333" id="holder_certiType" data-value="00" data-belong="policyHolderUser" data-type="certiType" placeholder="身份证" value="身份证" unselectable="on" onfocus="this.blur()" readonly="readonly"></input>
			</a>
		</li>
		<li>
			<a>
				<label>证件号码</label>
				<input id="holder_certiNo" type="text" data-belong="policyHolderUser" data-type="certiNo" oninput="if(value.length>18)value=value.slice(0,18)" placeholder="请输入证件号码" data-verify="certiNo"></input>
			</a>
		</li>
		<li>
			<a>
				<label>邮箱地址</label>
				<input type="email" data-belong="policyHolderUser" data-type="email" oninput="if(value.length>30)value=value.slice(0,30)" placeholder="请输入邮箱地址" data-verify="email"></input>
			</a>
		</li>
	</ul>
</section>

<section id="#insured" class="main open mg-b-10">
	<a class="related-person">被保险人
		<i class="arrows"></i>
	</a>
	
	<ul class="input-list">
		<li norequired="true">
			<a>
				<label>为谁投保</label>
				<div class="input-box">              
					<span>本人</span>
				</div>		
			</a>
		</li>
		<div id="insured-add"></div>
	</ul>

</section>